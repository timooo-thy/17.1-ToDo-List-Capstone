<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Manage your work tasks efficiently with ToDo Tracker. Organise your work list and streamline your workflow today.">
    <title>Work Tasks List | ToDo Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="/styles.css" rel="stylesheet">
</head>
<body data-page-id="work">
    <header>
        <nav class="navbar nav-bar navbar-expand-lg">
            <div class="container-fluid my-2">
              <a class="navbar-brand mx-4" href="/work"><h1>ToDo Tracker</h1></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item mx-4">
                    <a class="nav-link ps-2" href="/daily">Daily Tasks</a>
                  </li>
                  <li class="nav-item mx-4">
                    <a class="nav-link active ps-2" aria-current="page" href="/work">Work Tasks</a>
                  </li>
                  <li class="nav-item mx-4">
                    <a class="nav-link ps-2" href="/logout">Logout</a>
                  </li>
                </ul>
              </div>
            </div>
        </nav>
    </header>
    
    <main>
        <section class="datebox text-center mt-5">
            <p><%= currentDateTime %></p>
        </section>

        <section class="container d-flex justify-content-center mt-5">
            <div class="col-lg-6 col-md-8 col-sm-10 col-12">
                <ul class="list-group">
                    <% if(locals.todolist){%>
                        <% for(let i = 0; i < todolist.length; i++) { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-5">
                                <span class="list"><%= todolist[i].name %></span>
                                <form action="/work/delete" method="post">
                                    <input class="form-check-input" name="checkbox" type="checkbox" value="<%= todolist[i]._id %>" onChange="this.form.submit()">
                                </form>
                            </li>
                        <% } %>
                    <% } %>
                    </li>
                </ul>
                <form action="/work/submit" method="post">
                    <div class="row position-relative">
                        <div class="col-md-12">
                            <input type="text" class="form-control form" id="todo" name="todo" placeholder="Enter your todo item" required>
                            <button type="submit" class="button position-absolute top-50 end-0 translate-middle">+</button>
                        </div>
                    </div>
                </form>
            </div>   
        </section>
    </main>

    <footer class="mt-5 text-center">
      <p id="footerYear">Â©Timothy Lee | <span id="currentYear"></span></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script>
        function getYear() {
            const date = new Date();
            document.getElementById("currentYear").innerText = date.getFullYear();
        }
        getYear();
    </script>
</body>
</html>
